{
  "private": true,
  "main": "dist/index.js",
  "productName": "huntly",
  "scripts": {
    "clean": "rimraf dist",
    "start:renderer": "webpack --config webpack/webpack.dev.js --watch",
    "dev": "webpack --config webpack/webpack.dev.js && npm run build-electron && electron .",
    "build-electron": "tsc -p src/main",
    "build": "npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p src/main/tsconfig.json",
    "lint": "eslint ."
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-window-state": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/plugin-webpack": "^6.0.5",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.30",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "electron-forge": "^5.2.4",
    "eslint": "^8.17.0",
    "rimraf": "^3.0.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^4.7.3",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "asar": true,
    "files": [
      "dist"
    ]
  }
}
